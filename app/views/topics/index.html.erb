<p id="notice"><%= notice %></p>

<div class="page-header">
  <ul>
   <h1><center>Main Page</center></h1>
</ul>
</div>


<table class="table table-striped">
  <thead>
    <tr>
      <div class="row">
       <div class="col-md-6">    
         <th>Name</th>
       </div>
       <div class="col-md-6"> 
        <th>Description</th>
       </div>
      </div>  
        </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.title %></td>
        <td><%= topic.description %></td>
        <td><%= link_to 'Show', topic, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path, class: "btn btn-default" %>
